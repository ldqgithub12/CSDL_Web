@*@model IEnumerable<LeDangQuang_CaiDatLayout.Areas.Admin.Data.Sach>*@
@model PagedList.IPagedList<LeDangQuang_CaiDatLayout.Areas.Admin.Data.Sach>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" type="text/css" rel="stylesheet" />
@{
    ViewBag.Title = "listsach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="lisach">
    <h3 style="text-align:center; margin-top: 10px;">Danh sách sách theo tác giả</h3>
    <h2 style="text-align:center">@ViewBag.Message</h2>
    @foreach (var item in Model)
    {
        <div class="sach-items">
            @{
                string ImagePath = "~/wwwroot/Images/" + item.AnhBia;
            }
            <a href="@Url.Action("sachinfor", "Home", new{id=item.MaSach})"><img class="item-img" src="@Url.Content(ImagePath)" alt="Anh"></a>
            <p style="text-align: center;">Tiêu đề: <a href="@Url.Action("sachinfor","Home",new {id = item.MaSach })" style="text-decoration: none; color: black;">@Html.DisplayFor(modelItem => item.TieuDe)</a></p>
            <p style="text-align: center;">Giá bán: @Html.DisplayFor(modelItem => item.Gia) VND</p>
        </div>
    }
    <br />
    <div style="width: 100%; float:right; text-align:center">
        @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount*@
        @Html.PagedListPager(Model, page => Url.Action("listsach", new { page }))
    </div>
</div>



